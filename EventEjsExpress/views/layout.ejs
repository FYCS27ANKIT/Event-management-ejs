<!doctype html>
<html lang="en">
<head>
    <title>Event Manager</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow bg-info">
        <div class="container-fluid text-white">
            <a class="navbar-brand" href="/">Event Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/createEvent">Create Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">Your Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/allEvents">All Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout"><button style="background-color: transparent;" onclick="return confirm('Are you sure you want to logout?');"><%= user.username %></button></a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container mt-4">
        <%- body %>
    </div>

</body>

</html>
