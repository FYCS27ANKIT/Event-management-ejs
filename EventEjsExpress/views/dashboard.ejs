<div class="container mt-4">
    <h2 class="text-center mb-4">Your Events</h2>
    <div class="row">
        <% allEvents.forEach(event => { %>
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <% if (event.image) { %>
                        <img src="..<%= event.image %>" class="card-img-top" alt="Event Image">
                    <% } else { %>
                        <img src="../uploads/wp2349410.jpg" class="card-img-top" alt="Default Image">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= event.title %></h5>
                        <p class="card-text"><%= event.description %></p>
                        <p class="text-muted"><%= new Date(event.date).toDateString() %></p>
                        
                        <!-- Edit Button -->
                        <a href="/editEvent/<%= event._id %>" class="btn btn-warning btn-sm">Edit</a>

                        <!-- Delete Button -->
                        <form action="/deleteEvent/<%= event._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event?');">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

